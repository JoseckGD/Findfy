<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/img" />

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:background="@color/status"
        android:closeIcon="@drawable/baseline_clear_24"
        android:goIcon="@drawable/baseline_navigate_next_24"
        android:inputType="text"
        android:queryHint="Busca lago"
        android:searchHintIcon="@drawable/baseline_search_24"
        android:searchIcon="@drawable/baseline_search_24"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/md_theme_light_secondary"
            android:fontFamily="@font/inter"
            android:text="Kinder"
            android:textColor="@color/textColor"
            android:textSize="16sp"
            app:cornerRadius="15dp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/md_theme_light_secondary"
            android:fontFamily="@font/inter"
            android:text="Primaria"
            android:textColor="@color/textColor"
            android:textSize="16sp"
            app:cornerRadius="15dp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/md_theme_light_secondary"
            android:fontFamily="@font/inter"
            android:text="Secundaria"
            android:textColor="@color/textColor"
            android:textSize="16sp"
            app:cornerRadius="15dp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/md_theme_light_secondary"
            android:fontFamily="@font/inter"
            android:text="Bachillerato"
            android:textColor="@color/textColor"
            android:textSize="16sp"
            app:cornerRadius="15dp" />

        <Button
            android:id="@+id/button7"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/md_theme_light_secondary"
            android:fontFamily="@font/inter"
            android:text="Universidad"
            android:textColor="@color/textColor"
            android:textSize="16sp"
            app:cornerRadius="15dp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/md_theme_light_secondary"
            android:fontFamily="@font/inter"
            android:text="Postgrado"
            android:textColor="@color/textColor"
            android:textSize="16sp"
            app:cornerRadius="15dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>